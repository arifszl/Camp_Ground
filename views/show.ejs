<% layout('layout/boilerplate') -%>


<div class="row">
    <div class="col-6">
      <div class="card mb-3">
        <img src="<%=motel.image%>" class="d-block w-100" alt="">
          <div class="card-body">
            <h5 class="card-title"> <%=motel.title%> </h5>
            <p class="card-text"><%=motel.local%></p>
            <p class="card-text"><%=motel.description%></p>
            
          </div>

</div>

<a href="/edit/<%=id%>"><button class="btn btn-success"  id="mybtn" >Edit</button></a>

<form action="/delete/<%=id%>?_method=DELETE" method="post">
    <button class="btn btn-success" type="submit">Delete</button>
</form>
  
   

    </div>
    <div class="col-6">
        <h2>Leave a Review</h2>
<form action="/show/<%=id%>/review" method="POST" class="mb-3 validated-form" novalidate>
   
    <fieldset class="starability-basic">
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked
            aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    <div class="mb-3">
        <label class="form-label" for="body">Review Text</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="3" required></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button  type="submit" name="btn"  class="btn btn-success">Submit</button>
</form>
        <div class="mb-3">
            <% for(review of motel.review){%>
                <div class="mb-3 card">
                    <div class="card-body">
                        <p class="card-text">Review:-<%=review.body%></p>
                        <p class="card-text">rating:- <%=review.rating%></p>
                    </div>
                     <form action="/show/<%=id%>/review/<%=review._id%>?_method=DELETE" method="post">
                        <button type="submit">Delete</button>
                     </form>
                   
                </div>
        
           <% }%>
          </div>
    </div>
</div>


      
      






