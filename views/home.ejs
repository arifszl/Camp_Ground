
   




        <% layout('layout/boilerplate') -%>
        <div id="cluster-map"></div>
        <div class="container">
            <h1>All Motels</h1>
        
            <% for (let motel of motels){%>
            <div class="card mb-3">
                <div class="row">
                 
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= motel.title %>   <span ></span> </h5>
                            <h6>$<%= motel.price %></h6>
        
                            <p class="card-text"><%= motel.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= motel.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/show/<%=motel._id%>">View <%=motel.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
        </div>







